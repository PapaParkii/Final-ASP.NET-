@model Monster
@{
    ViewBag.Title = "Delete Monster";
}
<!--Delete a Monster-->
<h2>Confirm Deletion</h2>
<h3>@Model.Name (@Model.Rating)</h3>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="MonsterID" />

    <button type="submit" class="btn btn-primary">Confirm @ViewBag.Action</button>
    <a asp-controller="Home" asp-action="Index"
       class="btn btn-primary">Cancel</a>
</form>